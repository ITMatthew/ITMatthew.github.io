<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--<android.support.design.widget.TabLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="50dp">-->

    <!--</android.support.design.widget.TabLayout>-->
    <TextView
        android:id="@+id/tv_matthew_home"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:visibility="gone"
        android:text="内部测试" />

    <Button
        android:id="@+id/bt_matthew_1"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/bt_matthew_2"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/bt_matthew_3"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="50dp" />

    <ImageView
        android:id="@+id/iv_matthew"
        android:layout_width="50dp"
        android:visibility="gone"
        android:layout_height="50dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <matthew.hy.com.baseview.NavitationLayout
            android:id="@+id/nf_matthew_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_matthew"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/bar">

        </android.support.v4.view.ViewPager>
    </LinearLayout>
</LinearLayout>
